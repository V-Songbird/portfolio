<section class="work pb-5">
  <div id="work"></div>
  <div class="container">
    <h3 class="title">MY WORK</h3>

    <div class="work-list d-flex flex-wrap justify-content-center">
      <div class="col-12 col-sm-10 col-md-8 col-lg-12 row position-relative">
        {{#each works}}
        <div class="col-12 col-lg-6 col-xl-4 work-card">
          <a href={{this.url}} target="_blank">
            <div class="row flex-column my-5">
              <div class="col-12">
                <div class="work-title">{{this.name}}</div>
                <div>
                  <img src={{this.img}} alt="image">
                </div>
              </div>
            </div>
          </a>
        </div>
        {{/each}}
      </div>
    </div>

  </div>
</section>
